<article class="highlighted">
  <header class="action-header">
    <%= I18n.t('actions.edit') %>
    <%= @page_title.html_safe %>
	</header> 
  <% if @grid.present? and @row.present? %>
		<%= grid_form_for([@grid, @row], {:onsubmit=>'return false;'}) do |f| %>
		  <%= render :partial => "edit", 
	               :locals => {:f => f, 
	                         :parent => @grid, 
	                         :entity => @row,
	                         :filters => params[:filters]} %>
		  <%= render :partial => 'entities/actions_edit_inline', 
                 :locals => {:f => f,:entity => @row} %>
		<% end %>
	<% else %>
    <%= icon "exclamation" %>
    <%= I18n.t('error.no_data') %>
	<% end %>
</article>