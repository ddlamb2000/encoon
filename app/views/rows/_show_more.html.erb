<%= render :partial => "entities/show_more", :locals => { :entity => @row } %>
<table>
  <tr>
    <td class="header"><%= I18n.t('field.uuid') %></td>
    <td class="string"><%=h @row.uuid %></td>
  </tr>
  <tr>
    <td class="header"><%= I18n.t('field.history') %></td>
    <td class="string">
      <ul>
      <% for row in @grid.row_all_versions(@row.uuid) %>
        <li>
          <%= link_to information(row, true), :action => 'show', :grid_id => @grid.uuid, :id => row.id %>      
  				<%=sanitize trunc(row.description).html_safe %>
          <span class="detail-article"><%= display_updated_date(row).html_safe %></span>
        </li>
  		</ul>
      <% end %>
    </td>
  </tr>
  <% if @grid.has_translation? %>
    <tr>
      <td class="header"><%= I18n.t('field.languages') %></td>
      <td class="string">
        <ul>
          <% for row in @grid.row_all_locales(@row.uuid, @row.version) %>
            <li>
              <%= link_to(get_language(row.base_locale), :action => 'show', :grid_id => @grid.uuid, :id => row.uuid, :locale => row.base_locale) %>
              <%= row.name %>
            </li>
          <% end %>
        </ul>
      </td>
    </tr>
  <% end %>
  <%= render :partial => 'entities/show_audit', :locals => { :entity => @row } %>		
</table>