<section class="sidebar">
  <article class="article">
    <ul>
      <li><%= icon 'notice' %> <%= I18n.t('banner.explain_wel') %></li>
      <% if not user_signed_in? %>
        <li><%= link_to I18n.t('devise.sign_in'), new_session_path("user") %></li>
        <li><%= link_to I18n.t('devise.sign_up'), new_registration_path("user") %></li>
        <li><%= link_to I18n.t('devise.forgot_password'), new_password_path("user") %></li>
        <li><%= link_to I18n.t('devise.no_confirmation'), new_confirmation_path("user") %></li>
        <li><%= link_to I18n.t('devise.no_unlock'), new_unlock_path("user") %></li>
      <% end %>
    </ul>
  </article>
</section>

<section class="content3-4">
  <article class="highlighted">
    <header>
      <h1><%= bigicon 'home' %> <%= I18n.t('banner.welcome') %></h1>
    </header>
  </article>
  
  <% unless @workspaces.nil? %>
    <article class="highlighted">
      <header>
    		<h2>
    		  <%= @workspaces.name %>
    		  <span title="<%= @workspaces.description.html_safe %>"><%= icon('information') %></span>
    		</h2>
  		</header>
  		<%= render :partial => "rows/list", 
  		           :locals => { 
  		                :embedded => true,
  		                :grid => @workspaces, 
  		                :search => '', 
  		                :filters => nil, 
  		                :table_row_count => @workspaces.row_count,
  		                :table_rows => @workspaces.row_all, 
  		                :table_columns => @workspaces.filtered_columns
  		            } %>
    </article>
  <% end %>
</section>