<% content_for :navigator do %>
  <%= render "links" %>
<% end %>
<section class="static-dialog document">
  <header class="action-header"><%= t('devise.sign_in') %></header>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <table class="form">
      <tr>
        <td class="header"><%= f.label :email, :class => "required" %></td>
        <td class="string"><%= f.email_field :email, :required => true %></td>
      </tr>
      <tr>
        <td class="header"><%= f.label :password, :class => "required" %></td>
        <td class="string"><%= f.password_field :password, :required => true %></td>
      </tr>
      <tr>
        <td class="header"><%= f.label :remember_me %></td>
        <td class="string"><%= f.check_box :remember_me %></td>
      </tr>
    </table>
    <footer class="actions">
      <span class="button"><%= f.submit t('devise.sign_in') %></span>
    </footer>
  <% end %>
</section>