<% content_for :navigator do %>
  <%= render "links" %>
<% end %>
<header class="action-header"><%= I18n.t('devise.resend_conf') %></header>
<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <table class="form">
    <tr>
      <td class="header"><%= f.label :email, :class => "required" %></td>
      <td class="string"><%= f.email_field :email, :required => true %></td>
    </tr>
  </table>
  <footer class="actions">
    <%= devise_error_messages! %>
    <span class="button"><%= f.submit I18n.t('devise.resend_conf') %></span>
  </footer>
<% end %>