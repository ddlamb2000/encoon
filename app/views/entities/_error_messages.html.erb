<% unless item.blank? or item.errors.blank? %>
	<div id="error_explanation">
		<h2><%= I18n.t('activerecord.errors.messages.record_invalid', :errors => item.errors.count) %></h2>
		<ul>
  		<% item.errors.messages.each do |msg| %>
  			<li><%= msg[1][0].html_safe %></li>
  		<% end %>
		</ul>
	</div>
<% end %>