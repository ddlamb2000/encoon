<section id="header-application">
  <%= i 'icon' %>
  <%= current_application_title %>
</section>
<section id="header-links">
  <%= form_tag '', :method => 'GET', :class => 'locale' do %>
    <%= select_tag 'locale', 
                   options_for_select(LANGUAGES, I18n.locale.to_s),
                   :onchange => 'this.form.submit()' %>
  <% end %>
  <% if user_signed_in? %>
    <span class="button">
      <% if current_page?(edit_user_registration_path) %>
        <span class="highlighted">
          <%= icon 'preferences' %>
          <%= current_user.to_s %>
        </span>
      <% else %>
        <%= link_to(edit_user_registration_path) do %>
          <%= icon 'preferences' %>
          <%= current_user.to_s %>
        <% end %>
      <% end %>
    </span>
    <span class="separator">|</span>
    <span class="button">
      <%= link_to destroy_user_session_path, :method => :delete do %>
        <%= icon 'logout' %>
        <%= t 'banner.signout' %>
      <% end %>
    </span>
  <% else %>
    <span class="button">
      <%= link_to new_session_path("user") do %>
        <%= icon 'preferences' %>
        <%= t 'devise.sign_in' %>
      <% end %>
    </span>
  <% end %>
</section>
<section id="workspaces"><%= render :partial => "layouts/workspaces" %></section>