<% if @row.has_attachment? %>  <section id="attachments-<%= @row.uuid %>">    <header>      <h4><%= t 'field.attachments' %></h4>    </header>    <% for document in @row.attachments %>      <li id="row-image-<%= @row.uuid %>-<%= document.id.to_s %>">        <% if user_signed_in? and @grid.can_update?(@row) %>          <div id="actions-image-<%= @row.uuid %>-<%= document.id.to_s %>"                   class="actions float-actions"                   style="display: none;">            <span class="button" title="<%= t 'actions.delete_help' %>">              <a id="delete-image-<%= @row.uuid %>-<%= document.id.to_s %>">                <%= t 'actions.delete' %>              </a>            </span>          </div>          <script>            $("#row-image-<%= @row.uuid %>-<%= document.id.to_s %>").hover(              function (event){                $("#actions-image-<%= @row.uuid %>-<%= document.id.to_s %>").show();              },              function (event){                $("#actions-image-<%= @row.uuid %>-<%= document.id.to_s %>").hide();              }            );            $("#delete-image-<%= @row.uuid %>-<%= document.id.to_s %>").click(function (event){              $.ajax("<%= url_for(delete_attachment_path(:grid => @grid.uuid,                                                         :row => @row.uuid,                                                         :id => document.id)) %>");              $("#attachments-<%= @row.uuid %>").html('<%= escape_javascript(render :partial => "layouts/loading") %>');              $("#attachments-<%= @row.uuid %>").load("<%= url_for(attachments_path(:grid => @grid.uuid,                                                                                    :row => @row.uuid)) %>");              if ($("#more-button").attr('checked')) {                $("#more-content").html('<%= escape_javascript(render :partial => "layouts/loading") %>');                $("#more-content").load("<%= url_for(details_path(:grid => @grid.uuid,                                                                  :row => @row.uuid)) %>");              }            });          </script>        <% end %>        <% if document.photo? %>          <%= link_to document.document.url do %><%= image_tag document.document(:mini) %><% end %>        <% else %>          <%= icon "document" %>          <%= link_to document.document_file_name, document.document.url %>        <% end %>        <small><%= l document.document_updated_at %></small>      </li>    <% end %>  </section><% end %>