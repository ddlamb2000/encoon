<table>
  <tbody>
    <tr>
      <td class="header"><%= t 'field.version' %></td>
      <td class="string"><%= @row.version %></td>
    </tr>
    <tr>
      <td class="header"><%= t 'field.revision' %></td>
      <td class="string"><%= @row.revision %></td>
    </tr>
    <% if @row.has_begin? %>
      <tr>
        <td class="header"><%= t 'field.begin_date' %></td>
        <td class="string">
          <%= display_begin_date(@row.begin) %>
          <span class="detail"><%= display_distance_date(@row.begin) %></span>
        </td>
      </tr>
    <% end %>
    <% if @row.has_end? %>
      <tr>
        <td class="header"><%= t 'field.end_date' %></td>
        <td class="string">
          <%= display_end_date(@row.end) %>
          <span class="detail"><%= display_distance_date(@row.end) %></span>
        </td>
      </tr>
    <% end %>
    <tr>
      <td class="header"><%= t 'field.created' %></td>
      <td class="string">
        <%= @row.created_at %>
        <span class="detail">
          <%= display_created_time_by(@row, @row.who_created, @row.create_user_uuid).html_safe %>
        </span>
      </td>
    </tr>
    <% if @row.was_updated? %>
      <tr>
        <td class="header"><%= t 'field.updated' %></td>
        <td class="string">
          <%= @row.updated_at %>
          <span class="detail">
            <%= display_updated_time_by( @row, @row.who_updated, @row.update_user_uuid).html_safe %>
          </span>
        </td>
      </tr>
    <% end %>
    <% if @versions.present? %>
      <tr>
        <td class="header"><%= t 'field.history' %></td>
        <td class="string">
          <ul>
          <% for row in @versions %>
            <li>
              <%= link_to information(row, true),
                          show_path(:workspace => @grid.workspace_uuid,
                                    :grid => @grid.uuid,
                                    :row => row.uuid) %>
              <%= trunc(row.description).html_safe %>
              <span class="detail"><%= display_updated_date(row).html_safe %></span>
            </li>
          </ul>
          <% end %>
        </td>
      </tr>
    <% end %>
    <% if @grid.has_translation? and @locales.present? %>
      <tr>
        <td class="header"><%= t 'field.languages' %></td>
        <td class="string">
          <ul>
            <% for row in @locales %>
              <li>
                <%= link_to get_language(row.base_locale), 
                            show_path(:workspace => @grid.workspace_uuid,
                                      :grid => @grid.uuid,
                                      :row => row.uuid,
                                      :locale => row.base_locale) %>
                <%= row.name %>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
    <% if @audits.present? %>
      <tr>
        <td class="header"><%= t 'field.audit' %></td>
        <td class="string">
          <ul>
            <% for row in @audits %>
              <li>
                <%= row.kind_name.html_safe %>
                <span class="detail">
                  <%= display_updated_time_by(row, row.who_updated, row.update_user_uuid).html_safe %>
                </span>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>