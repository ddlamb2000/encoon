<% content_for :navigator do %>
  <%= render "links" %>
<% end %>
<section class="static-dialog document">
  <header class="action-header"><%= t('devise.send_instructions') %></header>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <table class="form">
      <tr>
        <td class="header"><%= f.label :email, :class => "required" %></td>
        <td class="string"><%= f.email_field :email, :required => true %></td>
      </tr>
    </table>
    <%= devise_error_messages! %>
    <footer class="actions">
      <span class="button"><%= f.submit t('devise.send_instructions'), :id => "commit" %></span>
    </footer>
  <% end %>
</section>
<script>
  $("#commit").button();
</script>